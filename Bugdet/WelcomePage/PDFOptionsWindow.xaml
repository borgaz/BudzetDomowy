<Window x:Class="Budget.WelcomePage.PDFOptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Opcje generowania PDF" Height="190" Width="300" ResizeMode="NoResize">
    <Grid>
        <DatePicker x:Name="StartDatePicker" HorizontalAlignment="Left" Height="25" Margin="50,45,0,0" VerticalAlignment="Top" Width="110"/>
        <DatePicker x:Name="EndDatePicker" HorizontalAlignment="Left" Height="25" Margin="50,80,0,0" VerticalAlignment="Top" Width="110"/>
        <Label Content="Wybierz zakres dat:" HorizontalAlignment="Left" Height="25" Margin="10,10,0,0" VerticalAlignment="Top" Width="150"/>
        <Label Content="od:" HorizontalAlignment="Left" Height="25" Margin="10,45,0,0" VerticalAlignment="Top" Width="30"/>
        <Label Content="do:" HorizontalAlignment="Left" Height="25" Margin="10,80,0,0" VerticalAlignment="Top" Width="30"/>
        <Button x:Name="PDFButton" Content="Generuj" HorizontalAlignment="Left" Height="25" Margin="10,115,0,0" VerticalAlignment="Top" Width="100" Click="PDFButton_Click"/>
    </Grid>
</Window>
