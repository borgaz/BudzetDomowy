<Window x:Class="Budget.Utility_Classes.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Okno wylogowania" Background="#FFEDEEF9
        " Height="117" Width="353" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="/Budget;component/Resources/app-icon.ico">
    <Grid>
        <StackPanel x:Name="ButtonsStackPanel" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" Height="32" Width="345">
            <Button x:Name="YesButton" Content="Button" Width="75" Margin="30,0,15,0" Click="YesButton_OnClick"/>
            <Button x:Name="CancelButton" Content="Button" Width="75" Margin="15,0,15,0" Click="CancelButton_OnClick"/>
            <Button x:Name="NoButton" Content="Button" Width="75" Margin="15,0,30,0" Click="NoButton_OnClick"/>
        </StackPanel>
        <TextBlock x:Name="MessageBoxText" VerticalAlignment="Top" Margin="15,10,15,0" Height="26" TextWrapping="Wrap" TextAlignment="Center"/>

    </Grid>
</Window>
