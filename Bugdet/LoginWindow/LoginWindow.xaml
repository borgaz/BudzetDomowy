<Window x:Class="Budget.LoginWindow.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoginWindow" Height="210" Width="260">
    <Grid HorizontalAlignment="Left" Width="240" Height="170" VerticalAlignment="Top" Margin="5,5,5,5">
        <ComboBox x:Name="BudgetsComboBox" HorizontalAlignment="Left" Margin="75,25,0,0" VerticalAlignment="Top" Height="25" Width="120"/>
        <Button x:Name="AddBudgetButton" Content="+" HorizontalAlignment="Left" Margin="200,25,0,0" VerticalAlignment="Top" Height="25" Width="25" Click="AddBudgetButton_Click"/>
        <Label Content="Budżet:" HorizontalAlignment="Left" Margin="20,25,0,0" Width="50" Height="25" VerticalAlignment="Top"/>
        <Label Content="Hasło:" HorizontalAlignment="Left" Margin="20,65,0,0" Width="50" Height="25" VerticalAlignment="Top"/>
        <TextBox x:Name="PassTextBox" HorizontalAlignment="Left" Height="25" Margin="75,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="LogInButton" Content="Zaloguj" HorizontalAlignment="Left" Margin="40,110,0,0" VerticalAlignment="Top" Height="25" Width="75" Click="LogInButton_Click_1"/>
        <Button x:Name="CloseButton" Content="Wyjdź" HorizontalAlignment="Left" Margin="140,110,0,0" VerticalAlignment="Top" Height="25" Width="75" Click="CloseButton_Click"/>

    </Grid>
</Window>
