<Window x:Class="Budget.LoginWindow.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Okno Logowania" Height="155" Width="233" Background="#FF33CC00">
    
    <Grid KeyDown="UIElement_OnKeyDown">
        <Label Content="Budżet:" HorizontalAlignment="Left" Margin="10,10,0,0" Width="50" Height="26" VerticalAlignment="Top"/>
        <ComboBox x:Name="BudgetsComboBox" HorizontalAlignment="Right" Margin="0,10,40,0" VerticalAlignment="Top" Height="26" Width="120" SelectionChanged="BudgetsComboBox_SelectionChanged" FontSize="14" />
        <Button x:Name="AddBudgetButton" Content="+" HorizontalAlignment="Right" VerticalAlignment="Top" Height="26" Width="26" Margin="0,10,10,0" Click="AddBudgetButton_Click" FontSize="14"/>
        
        <Label Content="Hasło:" HorizontalAlignment="Left" Margin="10,41,0,0" Width="50" Height="26" VerticalAlignment="Top"/>
        <PasswordBox x:Name ="PasswordTextBox" HorizontalAlignment="Right" Margin="0,41,40,0" VerticalAlignment="Top" Width="120" Height="26" FontSize="14"/>

        <Button x:Name="LogInButton" Content="Zaloguj" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10" Height="25" Width="95" Click="LogInButton_Click"/>
        <Button x:Name="CloseButton" Content="Wyjdź" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Height="25" Width="95" Click="CloseButton_Click"/>       
    </Grid>
</Window>