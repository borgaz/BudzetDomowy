<Page x:Class="Budget.Payments_Manager.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" d:DesignWidth="725"
	Title="MainPage" Height="550">

    <Grid>

        <Frame x:Name="BtnsContentFrame" Content="" Margin="10,45,0,0" Height="450" Width="300" VerticalAlignment="Top" HorizontalAlignment="Left" NavigationUIVisibility="Hidden" BorderBrush="#FF7CAFD1" BorderThickness="2" Background="#FFF4FDF9"/>
        <Button x:Name="AddPaymentBtn" Content="Dodaj Wydatek" HorizontalAlignment="Left" Margin="190,10,0,0" VerticalAlignment="Top" Width="120" Click="addPaymentBtn_Click" Height="25"/>
        <Button x:Name="AddSalaryBtn" Content="Dodaj Przychód" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120" Click="addSalaryBtn_Click" Height="25" Grid.Column="1"/>
        <Button x:Name="LoadHistoryButton" Content="Historia" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,141,10" Height="30" Width="121" Click="LoadHistoryButton_Click" />
        <Button x:Name="DumpAllButton" Content="Zapisz" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="100,0,0,10" Height="30" Width="120" Click="DumpAllButton_Click" />
        <TabControl HorizontalAlignment="Right" VerticalAlignment="Top" Height="485" Margin="0,10,10,0" Width="383">
            <TabItem Header="Wydatki i przychody okresowe">
                <DataGrid x:Name="PeriodPaymentsTable" Loaded="dataGridView_Loaded" IsReadOnly="True" LoadingRow="DataGridView_OnLoadingRow" Margin="0,0,0,0" Background="#FFF6FBFA">
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Usuń rekord"/>
                            <MenuItem Header="Edytuj rekord"/>
                            <MenuItem Header="Więcej Informacji"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                </DataGrid>
            </TabItem>
            <TabItem Header="Ostatnio dodane" FocusableChanged="UIElement_OnFocusableChanged">
                <DataGrid x:Name="LastAddedDataGrid" Loaded="LastAddedDataGrid_Loaded" IsReadOnly="True" Margin="10,8,10,10" LoadingRow="LastAddedDataGrid_OnLoadingRow"/>
            </TabItem>
        </TabControl>
        <Rectangle Fill="#FF56A9D1" HorizontalAlignment="Left" Margin="320,0,0,0" Width="2"/>
    </Grid>
</Page>