        Title="Sprawdzanie płatności okresowych" Height="164.857" Width="436.692">
    <Grid Margin="0,0,2,3">
        <Button x:Name="AddButton" Content="Dodaj płatność" HorizontalAlignment="Left" Margin="293,100,0,0" VerticalAlignment="Top" Width="124" Click="AddButton_Click"/>
        <Label x:Name="PaymentLabel" Content="Minał termin płatności okresowej:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="262" FontWeight="Bold"/>
        <TextBox x:Name="Amount" HorizontalAlignment="Left" Height="23" Margin="293,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="122" RenderTransformOrigin="0,0.348" PreviewTextInput="PreviewTextInput_Amount"/>
        <Label x:Name="AmountLabel" Content="Kwota:" HorizontalAlignment="Left" Margin="243,51,0,0" VerticalAlignment="Top" Width="45" RenderTransformOrigin="-0.244,0.538"/>
        <Label x:Name="DateLabel" Content="Data płatności:" HorizontalAlignment="Left" Margin="10,51,0,0" VerticalAlignment="Top"/>
        <Label x:Name="PaymentName" Content="" HorizontalAlignment="Left" Margin="219,10,0,0" VerticalAlignment="Top" Width="172"/>
        <Label x:Name="DateText" Content="" HorizontalAlignment="Left" Margin="103,51,0,0" VerticalAlignment="Top" Width="126"/>

    </Grid>
</Window>
